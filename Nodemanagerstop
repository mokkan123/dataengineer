curl -u admin:admin -H "X-Requested-By: ambari" -X POST \
http://<AMBARI_SERVER>:8080/api/v1/clusters/<CLUSTER_NAME>/requests \
-d '{
  "RequestInfo": {
    "context": "Stop NodeManager on specific host"
  },
  "Requests/resource_filters": [
    {
      "service_name": "YARN",
      "component_name": "NODEMANAGER",
      "hosts": "<NODEMANAGER_HOST>"
    }
  ],
  "Requests": {
    "command": "STOP"
  }
}'
